<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.GuestController">
    <top>
        <VBox prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Vizualizare Meniu">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="Caută după nume:" />
                        <TextField fx:id="searchField" prefWidth="200.0" promptText="ex: Pizza" />
                        <CheckBox fx:id="vegetarianCheck" mnemonicParsing="false" text="Doar vegetariene" />
                        <Label text="Tip:" />
                        <ChoiceBox fx:id="tipChoiceBox" prefWidth="150.0" />
                        <Label text="Preț între:" />
                        <TextField fx:id="pretMinField" prefWidth="60.0" promptText="Min" />
                        <Label text="-" />
                        <TextField fx:id="pretMaxField" prefWidth="60.0" promptText="Max" />
                        <Button fx:id="filterButton" mnemonicParsing="false" onAction="#handleFiltrare" text="Filtrează" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="produseTableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="numeColumn" prefWidth="200.0" text="Nume Produs" />
                <TableColumn fx:id="categorieColumn" prefWidth="150.0" text="Categorie" />
                <TableColumn fx:id="pretColumn" prefWidth="100.0" text="Preț (RON)" />
            </columns>
            <BorderPane.margin>
                <Insets left="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <right>
        <VBox prefHeight="200.0" prefWidth="250.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Detalii Produs">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <GridPane fx:id="detaliiGridPane" hgap="10.0" vgap="10.0">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                    <children>
                        <Label text="Nume:" />
                        <Label fx:id="numeDetaliiLabel" text="-" GridPane.columnIndex="1" />
                        <Label text="Preț:" GridPane.rowIndex="1" />
                        <Label fx:id="pretDetaliiLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Categorie:" GridPane.rowIndex="2" />
                        <Label fx:id="categorieDetaliiLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label fx:id="specificatiiLabel" text="Gramaj/Volum:" GridPane.rowIndex="3" />
                        <Label fx:id="specificatiiDetaliiLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </children>
                </GridPane>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </right>
</BorderPane>