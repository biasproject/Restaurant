<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ProgressIndicator?>
<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.ManagerController">
    <tabs>
        <Tab text="Gestiune Meniu">
            <content>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <StackPane>
                            <children>
                                <TableView fx:id="meniuTableView" prefHeight="200.0" prefWidth="200.0">
                                    <columns>
                                        <TableColumn fx:id="meniuNumeColumn" prefWidth="200.0" text="Nume" />
                                        <TableColumn fx:id="meniuCategorieColumn" prefWidth="200.0" text="Categorie" />
                                        <TableColumn fx:id="meniuPretColumn" prefWidth="100.0" text="Preț" />
                                    </columns>
                                </TableView>
                                <ProgressIndicator fx:id="loadingIndicator" visible="false" />
                            </children>
                        </StackPane>
                    </center>
                    <bottom>
                        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleAdaugaProdus" text="Adaugă Produs Nou" />
                                <Button mnemonicParsing="false" onAction="#handleModificaProdus" text="Modifică Produsul Selectat" />
                                <Button mnemonicParsing="false" onAction="#handleStergeProdus" text="Șterge Produsul Selectat" />
                                <Button mnemonicParsing="false" onAction="#handleLogout" text="Logout" style="-fx-base: #ff6347;" />
                            </children>
                        </HBox>
                    </bottom>
                    <top>
                        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
                            <children>
                                <Label text="Operațiuni fișier:">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Button mnemonicParsing="false" onAction="#handleImportJson" text="Import Meniu (JSON)" />
                                <Button mnemonicParsing="false" onAction="#handleExportJson" text="Export Meniu (JSON)" />
                            </children>
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </HBox>
                    </top>
                </BorderPane>
            </content>
        </Tab>

        <Tab text="Gestiune Personal">
            <content>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <TableView fx:id="personalTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <columns>
                                <TableColumn fx:id="personalUsernameColumn" prefWidth="250.0" text="Username" />
                                <TableColumn fx:id="personalRolColumn" prefWidth="250.0" text="Rol" />
                            </columns>
                        </TableView>
                    </center>
                    <bottom>
                        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleAdaugaPersonal" text="Angajează Personal Nou" />
                                <Button mnemonicParsing="false" onAction="#handleModificaPersonal" text="Modifică Personal Selectat" />
                                <Button mnemonicParsing="false" onAction="#handleStergePersonal" text="Concediază Personal Selectat" />
                            </children>
                        </HBox>
                    </bottom>
                </BorderPane>
            </content>
        </Tab>

        <Tab text="Gestiune Oferte">
            <content>
                <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                    <children>
                        <Label text="Activează / Dezactivează Ofertele Curente">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <CheckBox fx:id="happyHourCheck" mnemonicParsing="false" text="Happy Hour (a doua băutură la 50%)" />
                        <CheckBox fx:id="mealDealCheck" mnemonicParsing="false" text="Meal Deal (desert la 25% reducere cu o Pizza)" />
                        <CheckBox fx:id="partyPackCheck" mnemonicParsing="false" text="Party Pack (a 4-a Pizza gratuită)" />
                        <Button mnemonicParsing="false" onAction="#handleSalveazaOferte" text="Salvează Starea Ofertelor" />
                    </children>
                    <padding>
                        <Insets top="30.0" />
                    </padding>
                </VBox>
            </content>
        </Tab>

        <Tab text="Istoric Global">
            <content>
                <BorderPane>
                    <center>
                        <TableView fx:id="comenziTable" prefHeight="200.0" prefWidth="600.0">
                            <columns>
                                <TableColumn fx:id="colComId" text="ID" prefWidth="60.0" />
                                <TableColumn fx:id="colComUser" text="Ospătar" prefWidth="150.0" />
                                <TableColumn fx:id="colComMasa" text="Masa" prefWidth="60.0" />
                                <TableColumn fx:id="colComSubtotal" text="Subtotal" prefWidth="100.0" />
                                <TableColumn fx:id="colComReduceri" text="Reduceri" prefWidth="100.0" />
                                <TableColumn fx:id="colComTotal" text="Total" prefWidth="100.0" />
                                <TableColumn fx:id="colComData" text="Data" prefWidth="180.0" />
                            </columns>
                        </TableView>
                    </center>
                </BorderPane>
            </content>
        </Tab>
    </tabs>
</TabPane>
